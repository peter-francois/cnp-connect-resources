# =====================================
# DATABASE (MySQL)
# =====================================
MYSQL_ROOT_PASSWORD=CHANGE_ME
MYSQL_DATABASE=CNP-Connect
MYSQL_USER=cnp_user
MYSQL_PASSWORD=CHANGE_ME

# =====================================
# PHPMYADMIN
# =====================================
PMA_HOST=db

# =====================================
# BACKEND (NestJS)
# =====================================
BACKEND_PORT=3000
NODE_ENV=development

# Connexion DB pour Prisma / NestJS
DATABASE_URL=mysql://${MYSQL_USER}:${MYSQL_PASSWORD}@db:3306/${MYSQL_DATABASE}

# JWT & sécurité
JWT_ACCESS_SECRET=CHANGE_ME
JWT_REFRESH_SECRET=CHANGE_ME
JWT_TOKEN_TYPE=Bearer
CRYPTO_SECRET=CHANGE_ME

# URL du frontend (CORS, redirections, etc.)
FRONTEND_URL=http://localhost:8080

# Image container (si tu pushes sur un registry)
BACKEND_CONTAINER_REGISTERY=registry.example.com/cnp-connect-backend:latest

# =====================================
# FRONTEND (Vite / React)
# =====================================
VITE_API_BASE_URL=http://localhost:3000

# Image container (si tu pushes sur un registry)
FRONTEND_CONTAINER_REGISTERY=registry.example.com/cnp-connect-frontend:latest

# =====================================
# DOCKER / INFRA (optionnel mais utile)
# =====================================
COMPOSE_PROJECT_NAME=cnp-connect